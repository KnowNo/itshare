<div class="table-bordered border-left">
  <div class="top-title-container text-article-info">
    共检索到 <%= @experiences.count %> 条记录
    <%= will_paginate %>
  </div>

  <% @experiences.each do |experience| %>
    <div class="row-fluid border-bottom" style="padding-bottom: 10px;">
      <div class="padding10">
        <div class="pull-left">
          <%= image_tag 'portrait.gif', class: 'thumbnail portrait' %>
        </div>
        <div class="span10 article-list word-wrap" style="margin-left: 10px;">
          <%= link_to experience.title, experience_path(experience), class: 'title' %>
          <br />
          <span class="text-article-info">
            <% unless experience.company.strip.empty? then %>
              @<%= experience.company %>
              <span class="dot-divider">•</span>
            <% end %>
            <%= experience.user.name %>
            <span class="dot-divider">•</span>
            <% if experience.comments.any? then %>
              最后由 <%= experience.comments.last.user.name %> 于<%= experience.comments.last.created_at_from_now %>回复
            <% else %>
              于<%= experience.created_at_from_now %>发布
            <% end %>
            <% if experience.comments.count > 0 then %>
              <span class="dot-divider">•</span>
              共<%= experience.comments.count %>条回复
            <% end %>
          </span>
        </div>
        <% if signed_in? && current_user?(experience.user) then %>
          <div class="pull-right">
            <%= link_to (t 'common.edit_btn_label'), edit_experience_path(experience) %>
            <%= link_to (t 'common.delete_btn_label'), experience, method: :delete, data: {confirm: (t 'common.alert.delete')} %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @experiences.any? then %>
    <div class="bottom-title-container text-article-info">
      共检索到 <%= @experiences.count %> 条记录
      <%= will_paginate %>
    </div>
  <% end %>
</div>
