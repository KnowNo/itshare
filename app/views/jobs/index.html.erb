<div class="table-bordered border-left">
  <div class="top-title-container">
    共检索到 <%= @jobs.count %> 条记录
    <%= will_paginate %>
  </div>

  <% @jobs.each do |job| %>
    <div class="row-fluid border-bottom" style="padding-bottom: 10px;">
      <div class="padding10">
        <%= image_tag 'http://placehold.it/48x48', class: 'thumbnail pull-left' %>
        <p class="pull-left span10 article-list" style="margin-left: 10px;">
          <%= link_to job.title, job_path(job), class: 'title' %>
          <br/>
          <small>
            <span style="display:<%= job.company.strip.empty? ? 'none' : 'inline' %>;">
              @<%= job.company %><span class="dot-divider">•</span>
            </span>
            <%= job.user.name %>
            <span class="dot-divider">•</span>
            <span><%= job.created_at_from_now %></span>
            <% if job.job_comments.count > 0 then %>
              <span class="dot-divider">•</span>
              共<%= job.job_comments.count %>条回复
            <% end %>
          </small>
        </p>
        <% if signed_in? && current_user?(job.user) then %>
          <div class="pull-right">
            <%= link_to '编辑', edit_job_path(job) %>
            <%= link_to '删除', job, method: :delete, data: {confirm: 'Are you sure?'} %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @jobs.any? then %>
    <div class="bottom-title-container">
      共检索到 <%= @jobs.count %> 条记录
      <%= will_paginate %>
    </div>
  <% end %>
</div>
