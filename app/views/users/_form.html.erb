<%= form_for(@user, builder: CustomFormBuilder, :html => {class: 'table-bordered border-left margin-bottom20'}) do |f| %>
  <div class="top-title-container">
    <%= link_to 'Home', root_path %>
  </div>

  <div class="padding10">
    <h4><%= @user.new_record? ? '用户注册' : '资料修改' %></h4>
    <hr/>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="field">
      <%= f.text_field :email, :label => '电子邮箱：' %>
    </div>
    <div class="field">
      <%= f.text_field :name, :label => '姓名：' %>
    </div>
    <div class="field">
      <%= f.text_field :password, :label => '登录密码：' %>
    </div>
    <div class="field">
      <%= f.text_field :password_confirmation, :label => '密码确认：' %>
    </div>
    <div class="field">
      <%= f.text_field :gender, :label => '性别：' %>
    </div>
    <div class="field">
      <%= f.submit '保存', :class => 'btn' %>
      <%= link_to '取消', :back, :class => 'btn' %>
    </div>
  </div>

  <div class="bottom-title-container">
    <%= link_to 'Home', root_path %>
  </div>
<% end %>
