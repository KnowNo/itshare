<%= form_for(@user, builder: CustomFormBuilder, :html => {class: 'table-bordered border-left margin-bottom20'}) do |f| %>
  <div class="top-title-container">
    <%= link_to 'Home', root_path %>
  </div>

  <div class="padding10">
    <h4><%= @user.new_record? ? '用户注册' : '资料修改' %></h4>
    <hr/>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.text_field :email, label: '电子邮箱：', required: true %>
    <%= f.text_field :name, label: '姓名：', required: true %>
    <%= f.password_field :password, label: '登录密码：', required: true %>
    <%= f.password_field :password_confirmation, label: '密码确认：', required: true %>
    <%= f.radio_buttons :gender, [0, 1], label: "性别：", labels: ["男", "女"] %>

    <div class="field">
      <%= f.submit '注册新用户', :class => 'btn btn-primary' %>
    </div>
  </div>

  <div class="bottom-title-container">
    <%= link_to 'Home', root_path %>
  </div>
<% end %>
